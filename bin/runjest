#!/usr/bin/env node
const args = process.argv.splice(2)
let inspectBrk = ''
console.log(args)
if(args.indexOf('--inspect-brk') > -1)
    inspectBrk = '--inspect-brk'

const cmd = `node ${inspectBrk} node_modules/.bin/jest ${args.filter(a => a != '--inspect-brk').join(' ')}`
console.log(cmd)
require('child_process').execSync(cmd, {stdio: [0,1,2]})
