function spectrum_escape(){
    for COLOR in {0..255}
    do
        for STYLE in "38;5"
        do
            TAG="\033[${STYLE};${COLOR}m"
            STR="${STYLE};${COLOR}"
            echo -n "${TAG}${STR}${NONE}  "
        done
        echo
    done
}
